<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/updateButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff"
        android:textSize="40dp"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipEntry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:layout_toLeftOf="@+id/updateButton"
        android:layout_toStartOf="@+id/updateButton"
        android:textSize="40dp"
        android:textColor="#ff267eff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/cityRegion"
        android:layout_below="@+id/zipEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/updateButton"
        android:layout_alignEnd="@+id/updateButton"
        android:layout_marginTop="5dp"
        android:textColor="#ff30b2ff"
        android:textSize="50dp"
        android:typeface="normal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/tempLabel"
        android:layout_below="@+id/cityRegion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#ff279dff"
        android:textSize="120dp"
        android:layout_alignBottom="@+id/progressBar1"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/tempTextLabel"
        android:layout_above="@+id/progressBar1"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_alignStart="@+id/progressBar1"
        android:layout_marginBottom="-35dp"
        android:textColor="#ff1f8bff"
        android:textSize="42dp"
        android:layout_toStartOf="@+id/updateButton"
        android:layout_marginLeft="30dp"
        android:layout_alignRight="@+id/cityRegion"
        android:layout_alignEnd="@+id/cityRegion"
        android:gravity="center"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/forcast1"
        android:layout_below="@+id/tempLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:textColor="#ff3097ff"
        android:textSize="30dp"
        android:gravity="center" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/forcast2"
        android:textColor="#ff3097ff"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/forcast1"
        android:layout_toRightOf="@+id/forcast1"
        android:layout_toEndOf="@+id/forcast1" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/forcast3"
        android:textColor="#ff3097ff"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/forcast2"
        android:layout_toRightOf="@+id/forcast2"
        android:layout_toEndOf="@+id/forcast2" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/forcast4"
        android:textColor="#ff3097ff"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/forcast3"
        android:layout_toRightOf="@+id/forcast3"
        android:layout_toEndOf="@+id/forcast3" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/forcast5"
        android:textColor="#ff3097ff"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/forcast4"
        android:layout_toRightOf="@+id/forcast4"
        android:layout_toEndOf="@+id/forcast4" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:text=""
        android:id="@+id/forcast1details"
        android:layout_below="@+id/forcast1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:text=""
        android:id="@+id/forcast2details"
        android:textSize="15dp"
        android:layout_alignTop="@+id/forcast1details"
        android:layout_toRightOf="@+id/forcast1details"
        android:layout_toEndOf="@+id/forcast1details"
        android:gravity="center"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:text=""
        android:id="@+id/forcast3details"
        android:textSize="15dp"
        android:layout_below="@+id/forcast2"
        android:layout_toRightOf="@+id/forcast2"
        android:layout_toEndOf="@+id/forcast2"
        android:gravity="center"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:text=""
        android:id="@+id/forcast4details"
        android:textSize="15dp"
        android:layout_below="@+id/forcast3"
        android:layout_toRightOf="@+id/forcast3"
        android:layout_toEndOf="@+id/forcast3"
        android:gravity="center"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:text=""
        android:id="@+id/forcast5details"
        android:textSize="15dp"
        android:layout_below="@+id/forcast4"
        android:layout_toRightOf="@+id/forcast4"
        android:layout_toEndOf="@+id/forcast4"
        android:gravity="center"/>

</RelativeLayout>
