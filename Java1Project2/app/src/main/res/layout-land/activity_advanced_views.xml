<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AdvancedViews">


    <ListView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/techList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/siteName"
        android:layout_alignTop="@+id/techList"
        android:layout_toRightOf="@+id/techList"
        android:layout_toEndOf="@+id/techList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/siteUrl"
        android:layout_toEndOf="@+id/techList"
        android:layout_below="@+id/siteName"
        android:layout_toRightOf="@+id/techList"
        android:layout_alignRight="@+id/siteName"
        android:layout_alignEnd="@+id/siteName" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siteLogo"
        android:layout_below="@+id/siteUrl"
        android:layout_toRightOf="@+id/techList"
        android:layout_toEndOf="@+id/techList"
        android:layout_alignBottom="@+id/techList"
        android:layout_alignRight="@+id/siteUrl"
        android:layout_alignEnd="@+id/siteUrl" />


</RelativeLayout>
